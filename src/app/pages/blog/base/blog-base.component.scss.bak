@import '../../../../styles/variables';

.page-container
{
	&__header
	{
		&__content
		{
			.row
			{
				height: 15rem;
			}

			h2
			{
				font-size: 2.125rem;
				padding: 1.125rem 1.5rem 0;
			}

			h3
			{
				color: $color-grey;
				padding: 1rem 1.5rem .5rem;			
			}			
		}
	}
		
	&__background-image
	{
		&__content
		{
			padding-top: 1rem;
		}			
	}

	&__content 
	{
		display: inline-block;
    width: 100%;

    h2 
    {
    	color: $color-secondary;
    }
	}

	&__tags
	{
		margin-top: 1rem;

		.tagline 
		{
			background-color: $color-primary;
			border-radius: 20px;
			color: white;
			display: inline-block;
			margin-top: 1rem;
			padding: 5px 10px;
		}
	}
}


